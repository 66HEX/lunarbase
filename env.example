# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_HOST=127.0.0.1
SERVER_PORT=3000
FRONTEND_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=db.sqlite

# SQLCipher Configuration (Optional)
# Set this to enable database encryption with SQLCipher
# Use a strong, random password for production
SQLCIPHER_KEY=your-strong-encryption-password

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Password Security Configuration
# Pepper adds an additional layer of security to password hashing
# This should be a long, random string that is kept secret and never changes
PASSWORD_PEPPER=your-super-secret-pepper-change-this-in-production-and-keep-it-secret

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================
# Resend API Configuration - Get API key from https://resend.com
RESEND_API_KEY=your-resend-api-key-from-resend-dashboard
# Email address that will appear as sender
EMAIL_FROM=onboarding@resend.dev

# ===========================================
# OAUTH CONFIGURATION
# ===========================================
# OAuth Redirect Base URL (used for constructing redirect URIs)
OAUTH_REDIRECT_BASE_URL=http://localhost:3000

# Google OAuth - Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id-from-google-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-google-cloud-console

# GitHub OAuth - Get these from GitHub Developer Settings
GITHUB_CLIENT_ID=your-github-client-id-from-github-developer-settings
GITHUB_CLIENT_SECRET=your-github-client-secret-from-github-developer-settings

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# These variables will automatically create an admin user on first startup
# Only the first admin can be created this way - subsequent admins must be created through the admin panel
LUNARBASE_ADMIN_EMAIL=admin@example.com
LUNARBASE_ADMIN_USERNAME=admin
LUNARBASE_ADMIN_PASSWORD=your-secure-admin-password